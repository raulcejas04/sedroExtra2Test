{% extends 'base.html.twig' %}

{% block title %}Mostrar Invitacion{% endblock %}

{% block body %}
    <h2 class="text-center">Invitación: </h2>
    <div class="row justify-content-md-center">    
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Invitación a dispositivo: <b>{{ invitacion.dispositivo.nicname }}</b></h4>              
                </div>
                    <h3>Datos: Persona Física</h3>
                    <ul>
                        <li><b>Nombres: </b>{{ invitacion.personaFisica.apellido }}, {{ invitacion.personaFisica.nombres }}</li>
                        <li><b>DNI: </b>({{ invitacion.personaFisica.tipoDocumento.tipoDocumento }}) {{ invitacion.personaFisica.nroDoc }}</li>                     
                        <li><b>CUIT: </b>{{ invitacion.personaFisica.cuitCuil }}</li>
                        <li><b>Fecha de Nacimiento: </b>{{ invitacion.personaFisica.fechaNac|date("d-m-Y") }}</li>
                        <li><b>Sexo: </b>{{ invitacion.personaFisica.sexo.descripcion }}</li>
                        <li><b>Estado Civil: </b>{{ invitacion.personaFisica.estadoCivil.estadoCivil }}</li>
                        <li><b>Nacionalidad: </b>{{ invitacion.personaFisica.nacionalidad.pais }}</li>
                    </ul>
                    <br>
                   {#  <h3>Datos: Persona Jurídica</h3>
                    <ul>
                        <li><b>razón Social: </b>{{ solicitud.personaJuridica.razonSocial }}</li>
                        <li><b>CUIT: </b>{{ solicitud.personaJuridica.cuit }}</li>
                        <li><b>Alta: </b> {% if solicitud.personaJuridica.fechaAlta %} {{ solicitud.personaJuridica.fechaAlta|date("d-m-Y") }}{% else %} S/D {% endif %}</li>
                        <li><b>Baja: </b> {% if solicitud.personaJuridica.fechaBaja %} {{ solicitud.personaJuridica.fechaBaja|date("d-m-Y") }}{% else %} S/D {% endif %}</li>
                    </ul>
                    <br> #}
                    <h3>Datos: Dispositivo</h3>
                    <ul>
                        <li><b>Dispositivo: </b>{{ invitacion.dispositivo.nicname }}</li>
                        <li><b>Alta: </b> {% if invitacion.dispositivo.fechaAlta %} {{ invitacion.dispositivo.fechaAlta|date("d-m-Y") }}{% else %} S/D {% endif %}</li>
                        <li><b>Baja: </b> {% if invitacion.dispositivo.fechaBaja %} {{ invitacion.dispositivo.fechaBaja|date("d-m-Y") }}{% else %} S/D {% endif %}</li>
                    </ul>
                    <br>
                    <h3>Status: </h3>
                    

                    <br><br><br>.
                        <div class="row">
                        <div class="col-6">
                                <div class="text-center">
                                           <button data-url="{{path('invitacion_reenviarEmail',{'hash':invitacion.hash})}}" type="button" class="modal-form btn btn-lg btn-success">
                                             Reenviar Email
                                        </button>
                                </div>
                            </div>
                        </div>
                      <div class="row">
                             {% if invitacion.fechaUso is null and invitacion.fechaEliminacion is null%}
                              <div class="col-6">
                                <div class="text-center">
                                    <div class="center-block">
                                        <a href="{{path('eliminar_invitacion',{'hash':invitacion.hash})}}" class="btn btn-lg btn-danger">Eliminar Invitación</a>                                      
                                    </div>
                                </div>
                            </div>
                             {% endif %}
                        <div class="col-6">
                                <div class="text-center">
                                    <div class="center-block">
                                        <a href="{{path('mis_invitaciones')}}" class="btn btn-lg btn-primary">Volver</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <br><br><br>.
                </div>
            </div>            
        </div>
    </div>
    <br>
    <br>
    <br>
    <br>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('modales') }}
{% endblock %}